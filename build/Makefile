# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  vulcain_config = debug
  vulcain_pg_config = debug

else ifeq ($(config),release)
  vulcain_config = release
  vulcain_pg_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := vulcain vulcain_pg

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

vulcain:
ifneq (,$(vulcain_config))
	@echo "==== Building vulcain ($(vulcain_config)) ===="
	@${MAKE} --no-print-directory -C . -f vulcain.make config=$(vulcain_config)
endif

vulcain_pg: vulcain
ifneq (,$(vulcain_pg_config))
	@echo "==== Building vulcain_pg ($(vulcain_pg_config)) ===="
	@${MAKE} --no-print-directory -C . -f vulcain_pg.make config=$(vulcain_pg_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f vulcain.make clean
	@${MAKE} --no-print-directory -C . -f vulcain_pg.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   vulcain"
	@echo "   vulcain_pg"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"